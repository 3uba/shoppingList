<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:ShoppingList.Converters"
             x:Class="ShoppingList.Pages.AddPage">
    <ContentPage.Resources>
        <converters:MarkToBackgroundConverter x:Key="markToBackgroundConverter" />
    </ContentPage.Resources>
    
    <ContentPage.Content>
        <StackLayout Padding="20">
            <StackLayout Padding="0, 20">
                <Entry x:Name="name"
                       Placeholder="Nazwa"/>
            </StackLayout>
            <StackLayout Padding="0, 20">
                <Entry x:Name="qunatity"
                       Placeholder="Ilość"/>
            </StackLayout>
            <StackLayout Padding="0, 20">
                <Entry x:Name="type"
                       Placeholder="Typ/Rodzaj"/>
            </StackLayout>
            <Button BackgroundColor="CadetBlue" Clicked="Button_OnClicked" Padding="0, 20" Text="Dodaj" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
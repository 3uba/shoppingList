<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:ShoppingList.Converters"
             x:Class="ShoppingList.Views.ItemsList">
    <StackLayout>
        <ListView x:Name="ShoppingListView" ItemsSource="{Binding ShoppingList}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <HorizontalStackLayout Padding="0, 10">
                            <Label TextColor="Black" FontSize="20" Text="{Binding Name}"/>
                            <Label TextColor="Black" FontSize="20" Text="{Binding Quantity}"/>
                            <Label TextColor="Black" FontSize="20" Text="{Binding Mark}" />
                            <Label TextColor="Black" FontSize="20" Text="{Binding Type}"  TextDecorations="{Binding Mark, Converter={converters:MarkToTextDecorationConverter}}"/>
                            <Button Text="Zaznacz" Clicked="ToggleButton_Clicked" CommandParameter="{Binding Id}" />
                            <Button Text="Usuń" Clicked="DeleteButton_Clicked" CommandParameter="{Binding Id}" />
                        </HorizontalStackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentView>